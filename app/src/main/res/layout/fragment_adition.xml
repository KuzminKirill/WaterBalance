<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".View.AditionFragment" android:id="@+id/frameLayout3">
    <TextView
            android:text="Тип напитка"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drinkTypeText" android:textSize="24sp"
            android:layout_marginTop="63dp" android:layout_marginBottom="319dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/mililiters"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:text="TextView"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:id="@+id/mililiters"
            android:textSize="30sp"
            android:gravity="center"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/drinkTypeText"
            android:layout_marginBottom="217dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>

    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:max="500"
            android:progress="100"
            android:id="@+id/seekBar"
            app:layout_constraintTop_toBottomOf="@+id/drinkTypeText" android:layout_marginBottom="117dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/seekBar"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>